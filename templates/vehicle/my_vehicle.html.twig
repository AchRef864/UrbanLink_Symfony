{% extends 'basef.html.twig' %}

{% block title %}My Vehicle{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #5e60ce;
            --primary-light: #7b7dff;
            --primary-dark: #4a4bd1;
            --secondary: #6930c3;
            --accent: #64dfdf;
            --accent-light: #80ffdb;
            --light: #f8f9fa;
            --lighter: #fefeff;
            --dark: #212529;
            --darker: #121416;
            --gray: #6c757d;
            --gray-light: #e9ecef;
            --success: #06d6a0;
            --success-light: #a8f3e0;
            --danger: #ef476f;
            --danger-light: #fdd8e1;
            --warning: #ffd166;
            --warning-light: #ffedbf;
            --info: #118ab2;
            --info-light: #c2e9fb;
            --card-shadow: 0 10px 30px rgba(94, 96, 206, 0.15);
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
        }
        
        .container {
            max-width: 1200px;
            padding: 2rem 1rem;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--gray-light);
        }
        
        h1, h2, h3 {
            color: var(--primary);
            font-weight: 700;
            margin: 0;
        }
        
        h1 {
            font-size: 2.2rem;
            background: linear-gradient(90deg, var(--primary) 0%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            position: relative;
            display: inline-block;
        }
        
        h1:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50%;
            height: 4px;
            background: linear-gradient(90deg, var(--primary) 0%, var(--secondary) 100%);
            border-radius: 2px;
        }
        
        h2 {
            font-size: 1.6rem;
            margin: 0 0 1.5rem;
            position: relative;
            padding-bottom: 0.5rem;
        }
        
        h2:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background: var(--accent);
            border-radius: 3px;
        }
        
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem 1.75rem;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        
        .btn:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.1);
            transform: translateX(-100%);
            transition: transform 0.4s ease;
        }
        
        .btn:hover:after {
            transform: translateX(0);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            box-shadow: 0 4px 20px rgba(94, 96, 206, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(94, 96, 206, 0.4);
        }
        
        .btn svg {
            margin-right: 0.5rem;
            width: 18px;
            height: 18px;
            transition: transform 0.3s ease;
        }
        
        .btn:hover svg {
            transform: scale(1.1);
        }
        
        .card {
            border: none;
            border-radius: 16px;
            box-shadow: var(--card-shadow);
            transition: var(--transition);
            overflow: hidden;
            margin-bottom: 2rem;
            background: var(--lighter);
            position: relative;
        }
        
        .card:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary) 0%, var(--secondary) 100%);
        }
        
        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(94, 96, 206, 0.25);
        }
        
        .card-img-top {
            height: 220px;
            object-fit: cover;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            transition: transform 0.5s ease;
        }
        
        .card:hover .card-img-top {
            transform: scale(1.03);
        }
        
        .card-body {
            padding: 1.75rem;
        }
        
        .card-title {
            font-size: 1.35rem;
            margin-bottom: 1rem;
            color: var(--darker);
            font-weight: 700;
        }
        
        .card-text {
            color: var(--gray);
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
            line-height: 1.7;
        }
        
        .badge {
            font-size: 0.8rem;
            font-weight: 600;
            padding: 0.4em 0.8em;
            border-radius: 50px;
            letter-spacing: 0.5px;
        }
        
        .bg-success {
            background-color: var(--success) !important;
            color: white;
        }
        
        .bg-warning {
            background-color: var(--warning) !important;
            color: var(--dark);
        }
        
        .bg-info {
            background-color: var(--info) !important;
            color: white;
        }
        
        .bg-danger {
            background-color: var(--danger) !important;
            color: white;
        }
        
        .btn-group {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }
        
        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            border-radius: 8px;
        }
        
        .btn-outline-primary {
            border: 2px solid var(--primary);
            color: var(--primary);
            background: transparent;
        }
        
        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }
        
        .btn-outline-secondary {
            border: 2px solid var(--gray);
            color: var(--gray);
            background: transparent;
        }
        
        .btn-outline-secondary:hover {
            background: var(--gray);
            color: white;
            border-color: var(--gray);
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            background: rgba(248, 249, 250, 0.7);
            border-radius: 12px;
        }
        
        .empty-state svg {
            width: 80px;
            height: 80px;
            margin-bottom: 1.5rem;
            color: var(--primary);
            opacity: 0.8;
        }
        
        .empty-state h4 {
            color: var(--dark);
            margin-bottom: 0.75rem;
            font-size: 1.3rem;
        }
        
        .empty-state p {
            color: var(--gray);
            margin-bottom: 1.75rem;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .maintenance-section {
            background-color: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: var(--card-shadow);
            margin-left: 1.5rem;
            flex: 1;
            border: 1px solid rgba(0,0,0,0.05);
        }
        
        .maintenance-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .maintenance-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.25rem 0;
            border-bottom: 1px solid var(--gray-light);
            transition: var(--transition);
        }
        
        .maintenance-item:hover {
            background: rgba(100, 223, 223, 0.05);
            transform: translateX(5px);
        }
        
        .maintenance-item:last-child {
            border-bottom: none;
        }
        
        .maintenance-details {
            flex: 1;
            padding-right: 1rem;
        }
        
        .maintenance-title {
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--darker);
            font-size: 1.1rem;
        }
        
        .maintenance-description {
            color: var(--gray);
            font-size: 0.9rem;
            margin: 0.5rem 0;
            line-height: 1.6;
        }
        
        .maintenance-info {
            display: flex;
            gap: 1.5rem;
            font-size: 0.85rem;
            color: var(--gray);
            margin-top: 0.75rem;
            flex-wrap: wrap;
        }
        
        .maintenance-info span {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }
        
        .maintenance-cost {
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 1rem;
            color: var(--primary);
            background: rgba(94, 96, 206, 0.1);
            padding: 0.5rem 0.8rem;
            border-radius: 8px;
        }
        
        .maintenance-total {
            display: flex;
            justify-content: flex-end;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 2px dashed var(--primary);
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--primary);
        }
        
        .maintenance-total svg {
            margin-right: 0.75rem;
        }
        
        .add-maintenance-btn {
            margin-top: 1.5rem;
            display: inline-flex;
            align-items: center;
            width: 100%;
            justify-content: center;
        }
        
        .vehicle-row {
            display: flex;
            margin-bottom: 3rem;
            gap: 1.5rem;
        }
        
        .vehicle-card-container {
            flex: 0 0 400px;
        }
        
        /* PDF Button Styles */
        .btn-pdf {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        }
        
        .btn-pdf:hover {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            box-shadow: 0 8px 20px rgba(239, 68, 68, 0.4);
            transform: translateY(-3px);
        }
        
        .search-container {
            max-width: 700px;
            margin: 0 auto 2.5rem;
        }
        
        .search-form .input-group {
            box-shadow: 0 5px 15px rgba(94, 96, 206, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        
        .search-form .form-control {
            border: none;
            padding: 0.9rem 1.25rem;
            font-size: 1rem;
            background: var(--lighter);
        }
        
        .search-form .form-control:focus {
            box-shadow: none;
            background: white;
        }
        
        .search-form .btn {
            border-radius: 0;
        }
        
        .search-form .btn-outline-secondary {
            border-radius: 10px;
            margin-left: 0.75rem;
        }
        
        .sorting-container {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 1.5rem;
        }
        
        .sorting-container .btn-group {
            box-shadow: 0 5px 15px rgba(94, 96, 206, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        
        .sorting-container .btn {
            border-radius: 0;
            border: none;
            background: var(--lighter);
        }
        
        .sorting-container .btn.active {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
        }
        
        .maintenance-actions {
            display: flex;
            gap: 0.75rem;
            align-items: center;
        }
        
        .btn-icon {
            padding: 0.6rem;
            width: 36px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            transition: var(--transition);
        }
        
        .btn-icon svg {
            margin-right: 0;
            width: 18px;
            height: 18px;
        }
        
        .btn-pdf-icon {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
            box-shadow: 0 4px 10px rgba(239, 68, 68, 0.3);
        }
        
        .btn-pdf-icon:hover {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            box-shadow: 0 6px 15px rgba(239, 68, 68, 0.4);
            transform: translateY(-3px);
        }
        
        .btn-delete-icon {
            background: transparent;
            border: 2px solid var(--danger);
            color: var(--danger);
        }
        
        .btn-delete-icon:hover {
            background: var(--danger);
            color: white;
        }
        
        .maintenance-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
            border-top: 1px solid var(--gray-light);
            padding-top: 1.5rem;
        }
        
        .status-badge {
            padding: 0.35em 0.7em;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }
        
        .status-0 {
            background-color: var(--success-light);
            color: #047857;
        }
        
        .status-1 {
            background-color: var(--warning-light);
            color: #b45309;
        }
        
        .status-2 {
            background-color: var(--info-light);
            color: #0e7490;
        }
        
        @media (max-width: 1200px) {
            .vehicle-card-container {
                flex: 0 0 350px;
            }
        }
        
        @media (max-width: 992px) {
            .vehicle-row {
                flex-direction: column;
            }
            
            .vehicle-card-container {
                flex: 1;
                margin-bottom: 1.5rem;
                max-width: 100%;
            }
            
            .maintenance-section {
                margin-left: 0;
                margin-top: 0;
            }
        }
        
        @media (max-width: 768px) {
            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1.5rem;
            }
            
            .maintenance-footer {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-end;
            }
            
            .maintenance-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            .maintenance-actions {
                align-self: flex-end;
            }
            
            .maintenance-cost {
                align-self: flex-start;
            }
            
            .sorting-container .btn-group {
                flex-direction: column;
                width: 100%;
            }
            
            .sorting-container .btn {
                width: 100%;
                border-radius: 0;
            }
            
            .sorting-container .btn:first-child {
                border-radius: 10px 10px 0 0;
            }
            
            .sorting-container .btn:last-child {
                border-radius: 0 0 10px 10px;
            }
        }
        
        /* Animation classes */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(94, 96, 206, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(94, 96, 206, 0); }
            100% { box-shadow: 0 0 0 0 rgba(94, 96, 206, 0); }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container fade-in">
        <div class="page-header">
            <h1>My Vehicles</h1>
            <a href="{{ path('driver_vehicle_new') }}" class="btn btn-primary pulse">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Add Vehicle
            </a>
        </div>
        
        <div class="search-container">
            <form method="get" action="{{ path('my_vehicle') }}" class="search-form">
                <div class="input-group">
                    <input type="text" 
                        name="search" 
                        class="form-control" 
                        placeholder="Search by license plate, brand or model..."
                        value="{{ searchTerm }}"
                        aria-label="Search vehicles">
                    <button class="btn btn-primary" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                        Search
                    </button>
                    {% if searchTerm %}
                        <a href="{{ path('my_vehicle') }}" class="btn btn-outline-secondary">
                            Clear
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
        
        <div class="sorting-container">
            <div class="btn-group" role="group">
                <a href="{{ path('my_vehicle', {'sort': 'asc', 'search': searchTerm}) }}" 
                class="btn btn-outline-primary {{ app.request.query.get('sort') == 'asc' ? 'active' }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="7" y1="17" x2="17" y2="17"></line>
                        <line x1="7" y1="12" x2="17" y2="12"></line>
                        <line x1="7" y1="7" x2="17" y2="7"></line>
                        <polyline points="17 4 21 8 17 12"></polyline>
                    </svg>
                    Sort by Cost
                </a>
                <a href="{{ path('my_vehicle', {'sort': 'desc', 'search': searchTerm}) }}" 
                class="btn btn-outline-primary {{ app.request.query.get('sort') == 'desc' ? 'active' }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="7" y1="17" x2="17" y2="17"></line>
                        <line x1="7" y1="12" x2="17" y2="12"></line>
                        <line x1="7" y1="7" x2="17" y2="7"></line>
                        <polyline points="21 16 17 12 21 8"></polyline>
                    </svg>
                    Sort by Cost
                </a>
            </div>
        </div>
        
        {% if vehiclesWithMaintenance|length > 0 %}
            {% for vehicleData in vehiclesWithMaintenance %}
                {% set vehicle = vehicleData.vehicle %}
                {% set maintenances = vehicleData.maintenances %}
                {% set totalMaintenanceCost = vehicleData.totalMaintenanceCost %}
                
                <div class="vehicle-row">
                    <div class="vehicle-card-container">
                        <div class="card h-100">
                            <img src="{{ vehicle.image }}" class="card-img-top" alt="{{ vehicle.brand }} {{ vehicle.model }}">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ vehicle.brand }} {{ vehicle.model }} <span class="badge bg-{{ vehicle.isVerified ? 'success' : 'warning' }}">{{ vehicle.isVerified ? 'Verified' : 'Pending' }}</span></h5>
                                <p class="card-text">
                                    <strong>Type:</strong> {{ vehicle.type }}<br>
                                    <strong>License Plate:</strong> {{ vehicle.licensePlate }}<br>
                                    <strong>Year:</strong> {{ vehicle.year }}<br>
                                    <strong>Seats:</strong> {{ vehicle.seats }}<br>
                                    {% if maintenances|length > 0 %}
                                        {% set latestMaintenance = maintenances|first %}
                                        <strong>Status:</strong>
                                        <span class="status-badge status-{{ latestMaintenance.status }}">
                                            {% if latestMaintenance.status == 0 %}
                                                Ready
                                            {% elseif latestMaintenance.status == 1 %}
                                                In Maintenance
                                            {% else %}
                                                Reserved
                                            {% endif %}
                                        </span>
                                    {% endif %}
                                </p>
                                {% if not vehicle.isVerified %}
                                    <a href="{{ path('vehicle_verify_page', {'id': vehicle.id}) }}" class="btn btn-outline-success btn-sm mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                        </svg>
                                        Verify Vehicle
                                    </a>
                                {% endif %}
                                <div class="btn-group mt-auto">
                                    <a href="{{ path('vehicle_show', {'id': vehicle.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                            <circle cx="12" cy="12" r="3"></circle>
                                        </svg>
                                        Details
                                    </a>
                                    <a href="{{ path('vehicle_edit', {'id': vehicle.id}) }}" class="btn btn-outline-secondary btn-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                        </svg>
                                        Edit
                                    </a>
                                    <form method="post" action="{{ path('vehicle_delete', {'id': vehicle.id}) }}" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vehicle.id) }}">
                                        <button class="btn btn-outline-danger btn-sm" type="submit">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>            
                    
                    <div class="maintenance-section">
                        <h2>Maintenance History</h2>
                        
                        {% if maintenances|length > 0 %}
                            <ul class="maintenance-list">
                                {% for maintenance in maintenances %}
                                    <li class="maintenance-item">
                                        <div class="maintenance-details">
                                            <div class="maintenance-title">{{ maintenance.serviceType }}</div>
                                            <div class="maintenance-description">{{ maintenance.description }}</div>
                                            <div class="maintenance-info">
                                                <span class="maintenance-date">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                                    </svg>
                                                    {{ maintenance.maintenanceDate|date('M d, Y') }}
                                                </span>
                                                <span class="maintenance-provider">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                                        <circle cx="9" cy="7" r="4"></circle>
                                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                                    </svg>
                                                    {{ maintenance.serviceProvider }}
                                                </span>
                                            </div>
                                        </div>
                                        
                                        <div class="maintenance-cost">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <line x1="12" y1="1" x2="12" y2="23"></line>
                                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                            </svg>
                                            {{ maintenance.cost|number_format(2) }} TND
                                        </div>
                                        
                                        <div class="maintenance-actions">
                                            <a href="{{ path('maintenance_export_pdf', {'id': maintenance.id}) }}" class="btn btn-icon btn-pdf-icon" title="Export to PDF">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                    <polyline points="7 10 12 15 17 10"></polyline>
                                                    <line x1="12" y1="15" x2="12" y2="3"></line>
                                                </svg>
                                            </a>
                                            <form method="post" action="{{ path('maintenance_delete', {'id': maintenance.id}) }}" onsubmit="return confirm('Are you sure you want to delete this maintenance record?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ maintenance.id) }}">
                                                <button class="btn btn-icon btn-delete-icon" type="submit" title="Delete Record">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <polyline points="3 6 5 6 21 6"></polyline>
                                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                            
                            <div class="maintenance-footer">
                                <form method="post" action="{{ path('clear_vehicle_maintenance_history', {'vehicle_id': vehicle.id}) }}" onsubmit="return confirm('Are you sure you want to clear ALL maintenance history for this vehicle? This action cannot be undone.');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('clear_history_' ~ vehicle.id) }}">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="3 6 5 6 21 6"></polyline>
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                        </svg>
                                        Clear All History
                                    </button>
                                </form>
                                
                                <div class="maintenance-total">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <line x1="12" y1="1" x2="12" y2="23"></line>
                                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                    </svg>
                                    Total Spent: {{ totalMaintenanceCost|number_format(2) }} TND
                                </div>
                            </div>
                            
                            <a href="{{ path('admin_maintenances_new', {'vehicle_id': vehicle.id}) }}" class="btn btn-primary add-maintenance-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="12" y1="5" x2="12" y2="19"></line>
                                    <line x1="5" y1="12" x2="19" y2="12"></line>
                                </svg>
                                Add New Maintenance
                            </a>
                        {% else %}
                            <div class="empty-state">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8z"></path>
                                    <circle cx="10" cy="13" r="2"></circle>
                                    <line x1="16" y1="13" x2="22" y2="13"></line>
                                    <line x1="16" y1="17" x2="22" y2="17"></line>
                                    <polyline points="14 2 14 8 20 8"></polyline>
                                </svg>
                                <h4>No Maintenance Records Found</h4>
                                <p>Start tracking your vehicle's maintenance to keep it running smoothly and maintain its value.</p>
                                <a href="{{ path('admin_maintenances_new', {'vehicle_id': vehicle.id}) }}" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <line x1="12" y1="5" x2="12" y2="19"></line>
                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                    </svg>
                                    Add Your First Record
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="card">
                <div class="empty-state">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="1" y="3" width="15" height="13"></rect>
                        <polyline points="16 8 20 8 23 11 23 16 20 16 20 18 9 18"></polyline>
                        <circle cx="5.5" cy="18.5" r="2.5"></circle>
                        <circle cx="18.5" cy="18.5" r="2.5"></circle>
                    </svg>
                    <h4>No Vehicles Registered Yet</h4>
                    <p>Add your first vehicle to start managing its maintenance, tracking expenses, and keeping it in top condition.</p>
                    <a href="{{ path('driver_vehicle_new') }}" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Register Your First Vehicle
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
