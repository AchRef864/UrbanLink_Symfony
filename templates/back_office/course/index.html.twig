{% extends 'back_office/base.html.twig' %}

{% block title %}Gestion des Courses{% endblock %}

{% block page_title %}Courses{% endblock %}

{% block body %}
<div class="bg-white shadow-md rounded-2xl p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-xl font-semibold text-slate-700">Liste des Courses</h1>
    <a href="{{ path('course_new') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg shadow-md transition">
      + Ajouter une Course
    </a>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full text-sm text-left text-slate-600">
      <thead class="text-xs uppercase bg-gray-100 text-slate-600">
        <tr>
          <th class="px-4 py-3">Date</th>
          <th class="px-4 py-3">Départ</th>
          <th class="px-4 py-3">Arrivée</th>
          <th class="px-4 py-3">Distance</th>
          <th class="px-4 py-3">Montant</th>
          <th class="px-4 py-3">Statut</th>
          <th class="px-4 py-3">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        {% for course in courses %}
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3">{{ course.dateCourse ? course.dateCourse|date('d/m/Y H:i') : '—' }}</td>
            <td class="px-4 py-3">{{ course.villeDepart }}</td>
            <td class="px-4 py-3">{{ course.villeArrivee }}</td>
            <td class="px-4 py-3">{{ course.distanceKm }} km</td>
            <td class="px-4 py-3">€{{ course.montant }}</td>
            <td class="px-4 py-3">
              {% if course.statut == 'Acceptée' %}
                <span class="text-green-600 font-semibold">Acceptée</span>
              {% elseif course.statut == 'Refusée' %}
                <span class="text-red-500 font-semibold">Refusée</span>
              {% else %}
                <span class="text-yellow-500 font-semibold">En attente</span>
              {% endif %}
            </td>
            <td class="px-4 py-3 space-x-2">
              <a href="{{ path('course_edit', {'id': course.id}) }}" class="text-blue-500 hover:underline">Modifier</a>
              <form method="post" action="{{ path('course_delete', {'id': course.id}) }}" class="inline" onsubmit="return confirm('Confirmer la suppression ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
                <button type="submit" class="text-red-500 hover:underline">Supprimer</button>
              </form>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="7" class="px-4 py-3 text-center text-slate-400">Aucune course trouvée.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
