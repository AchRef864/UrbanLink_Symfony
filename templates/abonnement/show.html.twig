{# templates/abonnement/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de l'Abonnement{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">Détails de l'Abonnement</h1>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
            <p><strong>Type:</strong> {{ abonnement.type }}</p>
            <p><strong>Prix:</strong> {{ abonnement.prix }} TND</p>
            <p><strong>Date de Début:</strong> {{ abonnement.date_debut|date('d-m-Y') }}</p>
            <p><strong>Date de Fin:</strong> {{ abonnement.date_fin|date('d-m-Y') }}</p>
            <p><strong>État:</strong> {{ abonnement.etat }}</p>
            {% if abonnement.image %}
                <div>
                    <strong>Image:</strong>
                    <img src="{{ asset('uploads/' ~ abonnement.image) }}" alt="Image" class="mt-2 max-w-full h-auto rounded-lg">
                </div>
            {% endif %}
        </div>
        
        <a href="{{ path('abonnement_list') }}" class="mt-4 text-blue-500 hover:text-blue-700">Retour à la liste</a>
    </div>
{% endblock %}
