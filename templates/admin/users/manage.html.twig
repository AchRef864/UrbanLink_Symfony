{# templates/admin/users/manage.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ mode == 'manage' ? 'User Management' : 'User Profiles' }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ mode == 'manage' ? 'User Management' : 'User Profiles' }}</h1>

        {# Search Form #}
        {% include 'admin/users/_search_form.html.twig' %}

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                <span class="badge bg-{{ user.role == 'admin' ? 'danger' : 'primary' }}">
                                    {{ user.role|capitalize }}
                                </span>
                                </td>
                                <td>
                                    {% if user.isBlocked() %}
                                        <span class="badge bg-danger">Blocked</span>
                                    {% else %}
                                        <span class="badge bg-success">Active</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if mode == 'manage' %}
                                        {# Block/Unblock Section #}
                                        <div class="d-flex align-items-center">
                                            <div class="me-2">
                                                {{ user.name }} ({{ user.email }})
                                            </div>
                                            <div>
                                                {% if not user.isBlocked() %}
                                                    <form action="{{ path('admin_user_block', {'id': user.id}) }}" method="post" class="d-inline">
                                                        <button class="btn btn-sm btn-warning"
                                                                title="Block {{ user.name }}"
                                                                onclick="return confirm('Are you sure you want to block {{ user.name }}?')">
                                                            <i class="fas fa-lock"></i> Block
                                                        </button>
                                                        <input type="hidden" name="_token" value="{{ csrf_token('block' ~ user.id) }}">
                                                    </form>
                                                {% else %}
                                                    <form action="{{ path('admin_user_unblock', {'id': user.id}) }}" method="post" class="d-inline">
                                                        <button class="btn btn-sm btn-success"
                                                                title="Unblock {{ user.name }}"
                                                                onclick="return confirm('Are you sure you want to unblock {{ user.name }}?')">
                                                            <i class="fas fa-unlock"></i> Unblock
                                                        </button>
                                                        <input type="hidden" name="_token" value="{{ csrf_token('unblock' ~ user.id) }}">
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </div>

                                    {% else %}
                                        {# Edit/Delete Section #}
                                        <div class="d-flex align-items-center">
                                            <div class="me-2">
                                                {{ user.name }} ({{ user.email }})
                                            </div>
                                            <div>
                                                {% if 'ROLE_ADMIN' not in user.roles %}
                                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"
                                                       class="btn btn-sm btn-primary me-2"
                                                       title="Edit {{ user.name }}">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                {% endif %}

                                                <a href="{{ path('admin_user_confirm_delete', {'id': user.id}) }}"
                                                   class="btn btn-sm btn-danger"
                                                   title="Delete {{ user.name }}">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </div>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No users found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# Pagination #}
                {% if users.getTotalItemCount > 0 %}
                    <div class="navigation mt-4">
                        {{ knp_pagination_render(users) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}