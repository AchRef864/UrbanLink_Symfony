    <style>
        /* Soft light gradient background */
        .gradient-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, #ffffff, #f5f5f5, #e0e0e0, #fafafa);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            z-index: -1; /* Keep it in the background */
        }

        /* Simple text styling */
        .content {
            position: relative;
            z-index: 1; /* Ensure text appears above background */
            color: #333; /* Darker color for text to contrast with light background */
            font-size: 24px;
            margin-top: 20vh;
        }

        /* Animation to move the gradient */
        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>

    <script src="{{ asset('build/three_app.js') }}" defer></script>

    <script src="{{asset('assets/js/plugins/chartjs.min.js')}}" async></script>
