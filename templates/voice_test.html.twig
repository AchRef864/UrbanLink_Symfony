{% extends 'base.html.twig' %}

{% block body %}
  <h1>Test VoiceBundle</h1>

  {# Bouton Hello #}
  <button data-controller="hello" data-action="click->hello#greet">
    👋 Test Hello
  </button>

  {# Bouton Speech (synthèse vocale) #}
   <button
    data-controller="speech"
    data-speech-list-url-value="{{ path('course_index') }}"
