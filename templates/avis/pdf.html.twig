{# templates/avis/pdf.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        table { width: 100%; border-collapse: collapse; margin-bottom: 1rem; }
        th, td { border: 1px solid #333; padding: 0.5rem; text-align: left; }
        th { background: #eee; }
    </style>
</head>
<body>
    <h1>Complaints List</h1>
    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
                <th>Taxi Registration</th>
                <th>Vehicle License</th>
            </tr>
        </thead>
        <tbody>
            {% for avi in avis %}
                <tr>
                    <td>{{ avi.type }}</td>
                    <td>{{ avi.commentaire }}</td>
                    <td>{{ avi.dateAvis ? avi.dateAvis|date('Y-m-d') : '' }}</td>
                    <td>{{ avi.statut }}</td>
                    <td>{{ avi.taxi and avi.taxi.id ? avi.taxi.immatriculation : 'N/A' }}</td>
                    <td>{{ avi.vehicle and avi.vehicle.id ? avi.vehicle.licensePlate : 'N/A' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
