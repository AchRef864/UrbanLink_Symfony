{% extends 'base.html.twig' %}

{% block title %}Paiement réussi{% endblock %}

{% block body %}
<div style="margin-left: 280px;">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <svg class="mx-auto h-12 w-12 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <h2 class="mt-3 text-xl font-medium text-gray-900">Paiement réussi!</h2>
            <p class="mt-2 text-gray-600">Votre réservation #{{ reservation.id }} a été confirmée.</p>
            <div class="mt-4">
                <a href="{{ path('reservation_affichage') }}" class="text-blue-600 hover:text-blue-800">
                    Retour à la liste des trajets
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}