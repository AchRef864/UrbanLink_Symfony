{% extends 'base.html.twig' %}

{% block title %}Abonnements{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4 text-center">Achats d’abonnements</h2>

    <!-- Tableau des réservations aux abonnements -->
    {% for abonnementName, AbonnementReservation in groupedAbonnementReservations %}
        {% if AbonnementReservation is not empty %}
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <strong>{{ abonnementName }}</strong>
                </div>
                <div class="list-group list-group-flush">
                    {% for response in AbonnementReservation %}
                        <div class="list-group-item">
                            <h5 class="mb-1">Nom complet: {{ response.fullname }}</h5>
                            <p class="mb-1"><strong>Statut:</strong> <span class="badge bg-info">{{ response.statut }}</span></p>
                            <p class="mb-1"><strong>Date de début:</strong> {{ response.dateDebut|date('d-m-Y') }}</p>
                            <p class="mb-1"><strong>Date de fin:</strong> {{ response.dateFin|date('d-m-Y') }}</p>
                            <div class="btn-group mt-2" role="group" aria-label="Actions">
                                <a class="btn btn-danger" href="{{ path('delete', {'id': response.id}) }}">Supprimer</a>
                                <a class="btn btn-success" href="{{ path('update', {'id': response.id}) }}">Mettre à jour</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    {% else %}
        <p class="text-center">Aucun achat trouvé.</p>
    {% endfor %}

    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(AbonnementReservation) }}
    </div>
</div>
{% endblock %}
