{% extends 'admin.html.twig' %}

{% block title %}Modifier un abonnement{% endblock %}

{% block body %}
<div class="admin-container">
  <div class="form-wrapper">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">
          <i class="fas fa-pencil-alt mr-2"></i>Modifier un abonnement
        </h2>
        <p class="card-subtitle">Modifiez les détails de l'abonnement</p>
      </div>
      
      <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'edit-form'}}) }}
        
        <div class="form-grid">
          <!-- First Column -->
          <div class="form-column">
            <div class="form-group">
              {{ form_label(form.type, "Type d'abonnement") }}
              <div class="input-group">
                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                <i class="input-icon fas fa-list"></i>
              </div>
              {{ form_errors(form.type) }}
            </div>
            
            <div class="form-group">
              {{ form_label(form.prix, "Prix") }}
              <div class="input-group">
                <span class="input-prefix">€</span>
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
              </div>
              {{ form_errors(form.prix) }}
            </div>
          </div>
          
          <!-- Second Column -->
          <div class="form-column">
            <div class="form-group">
              {{ form_label(form.date_debut, "Date de début") }}
              <div class="input-group">
                {{ form_widget(form.date_debut, {'attr': {'class': 'form-control datepicker'}}) }}
                <i class="input-icon fas fa-calendar"></i>
              </div>
              {{ form_errors(form.date_debut) }}
            </div>
            
            <div class="form-group">
              {{ form_label(form.date_fin, "Date de fin") }}
              <div class="input-group">
                {{ form_widget(form.date_fin, {'attr': {'class': 'form-control datepicker'}}) }}
                <i class="input-icon fas fa-calendar"></i>
              </div>
              {{ form_errors(form.date_fin) }}
            </div>
          </div>
        </div>
        
        <!-- Full Width Row -->
        <div class="form-row-full">
          <div class="form-group">
            {{ form_label(form.etat, "État") }}
            <div class="status-toggle">
              {{ form_widget(form.etat) }}
              <label for="{{ form.etat.vars.id }}" class="toggle-slider"></label>
              <span class="toggle-label">{{ form.etat.vars.checked ? 'Actif' : 'Inactif' }}</span>
            </div>
            {{ form_errors(form.etat) }}
          </div>
          
          <div class="form-group">
            {{ form_label(form.image, "Image") }}
            <div class="file-upload-box">
              <div class="upload-preview">
                {% if form.vars.value.image %}
                  <img src="{{ asset('uploads/subscriptions/' ~ form.vars.value.image) }}" alt="Current image" class="preview-image">
                {% else %}
                  <i class="fas fa-image placeholder-icon"></i>
                {% endif %}
              </div>
              <div class="upload-controls">
                {{ form_widget(form.image, {'attr': {'class': 'upload-input'}}) }}
                <button type="button" class="upload-btn">
                  <i class="fas fa-cloud-upload-alt"></i> Choisir une image
                </button>
                <div class="file-info">
                  {{ form.vars.value.image ? form.vars.value.image : 'Aucun fichier sélectionné' }}
                </div>
              </div>
            </div>
            {{ form_errors(form.image) }}
          </div>
        </div>
        
        <div class="form-actions">
          <a href="{{ path('app_abonnement_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Retour
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save mr-2"></i>Enregistrer
          </button>
        </div>
        
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
  /* Base Styles */
  .admin-container {
    padding: 2rem;
    background-color: #f8f9fc;
  }
  
  .form-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0,0,0,0.05);
    overflow: hidden;
  }
  
  .card-header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #eee;
  }
  
  .card-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d3748;
    margin: 0;
    display: flex;
    align-items: center;
  }
  
  .card-subtitle {
    color: #718096;
    margin: 0.5rem 0 0;
    font-size: 0.9rem;
  }
  
  .card-body {
    padding: 2rem;
  }
  
  /* Form Layout */
  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .form-row-full {
    margin-bottom: 1.5rem;
  }
  
  .form-group {
    margin-bottom: 1.25rem;
  }
  
  /* Form Elements */
  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #4a5568;
    font-size: 0.9rem;
  }
  
  .input-group {
    position: relative;
  }
  
  .form-control, .form-select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    background-color: #f8fafc;
    transition: all 0.2s;
    font-size: 0.9rem;
  }
  
  .form-control:focus, .form-select:focus {
    outline: none;
    border-color: #4299e1;
    box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.2);
    background-color: white;
  }
  
  .input-icon {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #a0aec0;
  }
  
  .input-prefix {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #4a5568;
    font-weight: 500;
  }
  
  .form-control.with-prefix {
    padding-left: 2.5rem;
  }
  
  /* Status Toggle */
  .status-toggle {
    display: flex;
    align-items: center;
  }
  
  .toggle-slider {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 24px;
    margin: 0 0.75rem;
  }
  
  .toggle-slider:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #e2e8f0;
    border-radius: 24px;
    transition: .4s;
  }
  
  .toggle-slider:after {
    content: "";
    position: absolute;
    height: 16px;
    width: 16px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    border-radius: 50%;
    transition: .4s;
  }
  
  input[type="checkbox"]:checked + .toggle-slider:before {
    background-color: #48bb78;
  }
  
  input[type="checkbox"]:checked + .toggle-slider:after {
    transform: translateX(26px);
  }
  
  .toggle-label {
    font-weight: 500;
    color: #4a5568;
  }
  
  /* File Upload */
  .file-upload-box {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  
  .upload-preview {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    background-color: #f8fafc;
    border: 1px dashed #cbd5e0;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .preview-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .placeholder-icon {
    font-size: 1.5rem;
    color: #a0aec0;
  }
  
  .upload-controls {
    flex: 1;
  }
  
  .upload-input {
    display: none;
  }
  
  .upload-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: #edf2f7;
    border: none;
    border-radius: 6px;
    color: #4a5568;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .upload-btn:hover {
    background-color: #e2e8f0;
  }
  
  .upload-btn i {
    margin-right: 0.5rem;
  }
  
  .file-info {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: #718096;
  }
  
  /* Form Actions */
  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
  }
  
  .btn-primary {
    background-color: #4299e1;
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #3182ce;
  }
  
  .btn-secondary {
    background-color: #e2e8f0;
    color: #4a5568;
  }
  
  .btn-secondary:hover {
    background-color: #cbd5e0;
  }
  
  /* Error Messages */
  .form-error {
    color: #e53e3e;
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }
</style>
{% endblock %}

{% block javascripts %}
<script>
  // Update file name display
  document.querySelector('.upload-input').addEventListener('change', function(e) {
    const fileName = e.target.files.length ? e.target.files[0].name : "Aucun fichier sélectionné";
    document.querySelector('.file-info').textContent = fileName;
    
    // Preview image
    if (e.target.files.length) {
      const preview = document.querySelector('.upload-preview');
      const reader = new FileReader();
      
      reader.onload = function(event) {
        if (preview.querySelector('img')) {
          preview.querySelector('img').src = event.target.result;
        } else {
          preview.innerHTML = `<img src="${event.target.result}" class="preview-image">`;
        }
      }
      
      reader.readAsDataURL(e.target.files[0]);
    }
  });
  
  // Update toggle label
  document.querySelector('#{{ form.etat.vars.id }}').addEventListener('change', function(e) {
    document.querySelector('.toggle-label').textContent = e.target.checked ? 'Actif' : 'Inactif';
  });
</script>
{% endblock %}