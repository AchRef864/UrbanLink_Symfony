<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/a2e0c1f1d8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-100 text-gray-800 dark:bg-slate-900 dark:text-white min-h-screen">

    <div class="flex">
        <!-- Sidebar -->
        <aside class="w-64 h-screen bg-white shadow-xl dark:bg-slate-850 p-6 fixed">
            <h2 class="text-2xl font-bold text-blue-600 mb-10">Admin Panel</h2>
            <nav class="space-y-4">
                <a href="{{ path('afficher_abonnementAdmin') }}" class="flex items-center gap-3 text-gray-700 hover:text-blue-600 transition">
    <i class="fas fa-chart-line"></i> Tableau de bord
</a>

                <a href="{{ path('afficher_abonnementAdmin') }}" class="flex items-center gap-3 text-gray-700 hover:text-blue-600 transition">
                    <i class="fas fa-ticket-alt"></i> Abonnements
                </a>

            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 ml-64 min-h-screen">
            <!-- Header -->
            <header class="bg-white shadow-md p-4 dark:bg-slate-800 flex justify-between items-center">
                <h1 class="text-xl font-semibold">Espace Administrateur</h1>
                <div class="flex items-center gap-4">
                    <span class="text-sm text-gray-500">Bienvenue, Admin</span>
                    <img src="https://i.pravatar.cc/40" class="rounded-full w-10 h-10" alt="admin avatar">
                </div>
            </header>

            <!-- Page Content -->
            <main class="p-6">
                {% block body %}{% endblock %}
            </main>
        </div>
    </div>

</body>
</html>

