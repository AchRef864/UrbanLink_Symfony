{% extends 'base.html.twig' %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Liste des abonnements</h5>
                            <!-- Liste des abonnements -->
                            {% for abonnement in abonnements %}
                                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border mb-6">
                                    <div class="flex-auto p-6">
                                        <div class="flex flex-row -mx-3">
                                            <div class="flex-none w-2/3 max-w-full px-3">
                                                <p class="mb-0 font-sans font-semibold leading-normal uppercase text-sm text-gray-500 dark:text-white">Type d'abonnement</p>
                                                <h5 class="mb-2 font-bold text-lg dark:text-white">{{ abonnement.type }}</h5>
                                                <p class="mb-0 text-sm text-gray-600 dark:text-white dark:opacity-60">
                                                    Date de début : {{ abonnement.dateDebut|date('d-m-Y') }}<br>
                                                    Date de fin : {{ abonnement.dateFin|date('d-m-Y') }}
                                                </p>
                                                <p class="mt-2 text-sm text-gray-600 dark:text-white dark:opacity-60">
                                                    Prix : <span class="font-bold text-emerald-500">{{ abonnement.prix }} €</span><br>
                                                    État : {{ abonnement.etat }}
                                                </p>

                                                {% if abonnement.image %}
                                                    <img src="{{ asset('uploads/images/' ~ abonnement.image) }}" class="mt-3 w-20 h-20 rounded-lg object-cover shadow" />
                                                {% endif %}
                                            </div>

                                            <div class="px-3 text-right basis-1/3">
                                                <div class="inline-block w-12 h-12 text-center rounded-circle bg-gradient-to-tl from-blue-500 to-violet-500">
                                                    <i class="fa fa-ticket text-lg relative top-3.5 text-white"></i>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-4 flex justify-between">
                                            <a class="btn btn-primary" href="{{ path('reserver', {'id': abonnement.id}) }}">Acheter</a>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p>Aucun abonnement disponible.</p>
                            {% endfor %}
                            <!-- Fin de la liste des abonnements -->

                            <!-- Pagination -->
                            <div class="pagination">
                                {% set currentPage = abonnements.currentPageNumber %}
                                {% set previous = currentPage > 1 ? currentPage - 1 : false %}
                                {% set next = currentPage < abonnements.pageCount ? currentPage + 1 : false %}
                                <ul class="pagination">
                                    {% if previous %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_abonnement', {'page': previous}) }}">Précédent</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ currentPage }}</span>
                                    </li>
                                    {% if next %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_abonnement', {'page': next}) }}">Suivant</a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                            <!-- Fin de la pagination -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
