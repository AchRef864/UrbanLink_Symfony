{% extends 'base.html.twig' %}

{% block title %}Modifier Abonnement - {{ abonnement.type }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .form-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 2rem;
            margin: 2rem auto;
        }
        .form-header {
            color: #2c3e50;
            border-bottom: 3px solid #3498db;
            padding-bottom: 0.75rem;
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
        }
        
        /* Style personnalisé pour l'upload d'image */
        .file-upload {
            margin-bottom: 1.5rem;
        }
        .upload-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #495057;
        }
        .upload-wrapper {
            position: relative;
            border: 2px dashed #ced4da;
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s;
            background: #f8f9fa;
        }
        .upload-wrapper:hover {
            border-color: #3498db;
            background: #f0f8ff;
        }
        .upload-input {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            opacity: 0;
            cursor: pointer;
        }
        .upload-icon {
            width: 48px;
            height: 48px;
            fill: #6c757d;
            margin-bottom: 1rem;
        }
        .upload-text {
            color: #495057;
            margin-bottom: 0.5rem;
        }
        .form-error {
            color: #dc3545;
            font-size: 0.875em;
        }
        
        /* Style pour l'image actuelle */
        .current-image-container {
            margin-top: 1rem;
            text-align: center;
        }
        .current-image {
            max-width: 200px;
            max-height: 200px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid #dee2e6;
        }
        
        /* Styles pour les autres champs */
        .form-control, .form-select {
            border-radius: 6px;
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }
        .form-control:focus, .form-select:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        }
        .btn-update {
            background-color: #3498db;
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s;
        }
        .btn-update:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card">
                <h2 class="form-header">
                    <i class="fas fa-edit me-2"></i>Modifier l'Abonnement
                </h2>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show mb-4">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.type) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text">€</span>
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.prix) }}
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.date_debut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.date_debut) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.date_fin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.date_fin) }}
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.etat, 'État', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.etat, {'attr': {'class': 'form-select'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.etat) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group file-upload">
                            <div class="upload-label">{{ form_label(form.image, "Image") }}</div>
                            <div class="upload-wrapper">
                                {{ form_widget(form.image, {'attr': {'class': 'upload-input'}}) }}
                                <div class="upload-content">
                                    <svg class="upload-icon" viewBox="0 0 24 24">
                                        <path d="M19,13a1,1,0,0,0-1,1v.38L16.52,12.9a2.79,2.79,0,0,0-3.93,0l-.7.7L9.41,11.12a2.85,2.85,0,0,0-3.93,0L4,12.6V7A1,1,0,0,1,5,6h7a1,1,0,0,0,0-2H5A3,3,0,0,0,2,7V19a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V14A1,1,0,0,0,19,13ZM5,20a1,1,0,0,1-1-1V15.43l2.9-2.9a.79.79,0,0,1,1.09,0l3.17,3.17,0,0L15.46,20Zm13-1a.89.89,0,0,1-.18.53L13.31,15l.7-.7a.77.77,0,0,1,1.1,0L18,17.21ZM8.5,5A1.5,1.5,0,1,0,7,6.5,1.5,1.5,0,0,0,8.5,5Z"/>
                                    </svg>
                                    <div class="upload-text">Glissez-déposez votre fichier ou cliquez pour parcourir</div>
                                </div>
                            </div>
                            {% if abonnement.image %}
                                <div class="current-image-container mt-3">
                                    <p class="small mb-1">Image actuelle:</p>
                                    <img src="{{ asset('uploads/' ~ abonnement.image) }}" 
                                         alt="Image abonnement" 
                                         class="current-image img-thumbnail">
                                </div>
                            {% endif %}
                            <small class="form-error">{{ form_errors(form.image) }}</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('afficher_abonnementAdmin') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Annuler
                    </a>
                    <button type="submit" class="btn btn-update text-white">
                        <i class="fas fa-save me-2"></i> Mettre à jour
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Gestion de l'affichage du nom du fichier uploadé
        document.querySelector('.upload-input').addEventListener('change', function(e) {
            const fileName = e.target.files[0]?.name || 'Aucun fichier sélectionné';
            const uploadContent = document.querySelector('.upload-content');
            uploadContent.innerHTML = `
                <svg class="upload-icon" viewBox="0 0 24 24" style="fill: #3498db;">
                    <path d="M19,13a1,1,0,0,0-1,1v.38L16.52,12.9a2.79,2.79,0,0,0-3.93,0l-.7.7L9.41,11.12a2.85,2.85,0,0,0-3.93,0L4,12.6V7A1,1,0,0,1,5,6h7a1,1,0,0,0,0-2H5A3,3,0,0,0,2,7V19a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V14A1,1,0,0,0,19,13ZM5,20a1,1,0,0,1-1-1V15.43l2.9-2.9a.79.79,0,0,1,1.09,0l3.17,3.17,0,0L15.46,20Zm13-1a.89.89,0,0,1-.18.53L13.31,15l.7-.7a.77.77,0,0,1,1.1,0L18,17.21ZM8.5,5A1.5,1.5,0,1,0,7,6.5,1.5,1.5,0,0,0,8.5,5Z"/>
                </svg>
                <div class="upload-text">${fileName}</div>
                <small class="text-muted">Cliquez pour changer</small>
                ${document.querySelector('.upload-input').outerHTML}
            `;
        });

        // Validation du formulaire
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
{% endblock %}